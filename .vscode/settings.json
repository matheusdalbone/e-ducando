{
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,

  "commands.workspaceCommands": {
    "Backend": {
      "nestedItems": {
        "Run server": {
          "command": "workbench.action.tasks.runTask",
          "args": "django-server",
          "icon": "run-view-icon",
          "iconColor": "charts.red",
          "statusBar": {
            "text": "Backend",
            "color": "red",
            "markdownTooltip": "Run Django Server"
          }
        }
      }
    }, 
    "Frontend": {
      "nestedItems": {
        "Run frontend": {
          "command": "workbench.action.tasks.runTask",
          "args": "run-react",
          "icon": "ports-open-browser-icon",
          "iconColor": "terminal.ansiGreen",
          "statusBar": {
            "text": "Frontend",
            "color": "green"
          }
        }
      }
    }
  },
  "commands.treeViewWorkspaceCommandSymbol": "",
  "commands.treeViewStatusBarVisibleSymbol": ""
}